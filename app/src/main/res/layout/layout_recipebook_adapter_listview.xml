<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgVw_recipePhoto"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtv_recipeName"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/imgVw_recipePhoto"
        android:text="Recipe's name here"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_ingredient"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:layout_below="@+id/txtv_recipeName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/imgVw_recipePhoto"
        android:text="Ingredientes"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_userName"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ingredient"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/imgVw_recipePhoto"
        android:text="@string/username"
        android:textAlignment="viewEnd" />

</RelativeLayout>